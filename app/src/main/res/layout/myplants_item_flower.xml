<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"


    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/flowerImageView"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:contentDescription="@string/content_description_media"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/flowerTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textColor="@color/black"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:background="@color/bottom_appbar_menu"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="@+id/flowerImageView"
            app:layout_constraintStart_toStartOf="@+id/flowerImageView" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteButton"
            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
            app:backgroundTint="@color/bottom_appbar_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/delete"
            app:iconTint="@color/black"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/flowerImageView"
            app:layout_constraintEnd_toEndOf="@+id/flowerImageView" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/updateButton"
            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/bottom_appbar_menu"
            app:icon="@drawable/heart_plus"
            app:iconTint="@color/black"

            app:iconTintMode="multiply"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/flowerImageView"
            app:layout_constraintStart_toStartOf="@+id/flowerImageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
